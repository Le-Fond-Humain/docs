  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Product documentation",
        "icon": "shield-halved",
        "groups": [
          {
            "group": "Getting started",
            "icon": "rocket",
            "pages": [
              "getting-started/overview",
              "getting-started/system-requirements",
              "getting-started/quick-installation"
