              "hardware/hsm",
              "hardware/biometric-devices",
              "hardware/network-appliances"
            ]
          },
          {
            "group": "Software products",
            "icon": "code",
            "pages": [
              "software/encryption-software",
              "software/access-control",
              "software/backup-recovery",
              "software/security-monitoring"
            ]
          },
          {
            "group": "Installation & setup",
            "icon": "wrench",
            "pages": [
              "installation/hardware-installation",
              "installation/software-deployment",
              "installation/initial-configuration",
              "installation/integration-guides"
            ]
          },
          {
            "group": "User guides",
            "icon": "book-open",
            "pages": [
              "guides/daily-operations",
              "guides/best-practices",
              "guides/troubleshooting",
              "guides/maintenance"
            ]
          }
        ]
      },
      {
